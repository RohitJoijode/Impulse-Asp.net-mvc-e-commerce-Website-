@model Impulse.DAL.SubCategoryObject
<div class="modal-header">
    <h5 class="modal-title">Add Sub Category Side Image List</h5>
    <button type="button" class="btn-close" onclick="closemySubCategorySideImageListModal();" aria-label="Close"></button>
</div>
<div class="modal-body">
    <article class="card">
        <div class="content-body">
            <table>
                <tr>
                    <td>
                        <h5 class="card-title">Sub Category Side Image List</h5>
                    </td>
                    <td style="position:absolute; right: 20px;">
                        <button class="btn btn-primary" onclick="CreateSideSubCategoryImageModalList(@Model.SubCategoryImageId,@Model.CategoryId,@Model.SubCategoryId,@Model.SubcategoryImageColorId);">Create Side Sub Category Image</button>
                    </td>
                </tr>
            </table>
            <!-- Table with stripped rows -->
            <table class="table table-striped"
                   id="table"
                   data-toggle="table"
                   data-height="600"
                   data-pagination="true"
                   data-search="true">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>CategoryId</th>
                        <th>Sub Category Id</th>
                        <th>Sub_Category Image Id</th>
                        <th>Sub CategoryImage Color Id</th>
                        <th>Sub Category Image Color Id</th>
                        <th>Sub Category Image</th>
                        <th>Sub Category Image Path</th>
                        <th>IsActive</th>
                        <th>CreatedBy</th>
                        <th>CreatedDate</th>
                        <th>UpdatedBy</th>
                        <th>UpdatedDate</th>
                        <th scope="col">Edit Side Image</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var Index = 0; Index < Model.SubCategoryImageList.Count; Index++)
                    {
                    <tr>
                        <th scope="row">@Model.SubCategoryImageList[Index].Id</th>
                        <td>@Model.SubCategoryImageList[Index].CategoryId</td>
                        <td>@Model.SubCategoryImageList[Index].SubCategoryId</td>
                        <td>@Model.SubCategoryImageList[Index].Sub_CategoryImageId</td>
                        <td>@Model.SubCategoryImageList[Index].SubCategoryImageColorId</td>
                        <td>@Model.SubCategoryImageList[Index].SubCategoryImageColorId</td>
                        <td>
                            <img tabindex="0" src='@Model.SubCategoryImageList[Index].SubCategoryImagePath'style="height: 100px; width: 100px; ">
                        </td>
                        <td>@Model.SubCategoryImageList[Index].SubCategoryImagePath</td>
                        <td>@Model.SubCategoryImageList[Index].IsActive</td>
                        <td>@Model.SubCategoryImageList[Index].CreatedBy</td>
                        <td>@Model.SubCategoryImageList[Index].CreatedDate</td>
                        <td>@Model.SubCategoryImageList[Index].UpdatedBy</td>
                        <td>@Model.SubCategoryImageList[Index].UpdatedDate</td>
                        <td><button class="btn btn-danger" onclick="EditSideSubCategoryImageModalList(@Model.SubCategoryImageList[Index].Id,@Model.SubCategoryImageId,@Model.CategoryId,@Model.SubCategoryId,@Model.SubcategoryImageColorId);">Edit Side Image</button></td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>    
    </article>
</div>



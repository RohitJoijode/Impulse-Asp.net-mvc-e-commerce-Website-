<body>
    <!-- ============== SECTION PAGETOP ============== -->
    <section class="bg-primary padding-y-sm">
        <div class="container">
            <ol class="breadcrumb ondark steps">
                <li class="breadcrumb-item"> <a href="/Home/HomePage">1. Home</a>  </li>
                <li class="breadcrumb-item"> <a href="/LogIn/LogIn">2. Log In</a>  </li>
            </ol>
        </div> <!-- container //  -->
    </section>
    <!-- ============== SECTION PAGETOP END// ============== -->
    <main>
        @using (Html.BeginForm("Submit","LogIn", FormMethod.Post))
        {
            <div class="container">
                <section class="section register  d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                                <div class="d-flex justify-content-center py-5">
                                </div><!-- End Logo -->
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="pt-4 pb-2">
                                            <h5 class="card-title text-center pb-0 fs-4">Login</h5>
                                        </div>
                                        <table class="col-12">
                                            <tr>
                                                <td>
                                                    <label for="yourUsername">Username</label>
                                                    @Html.TextBoxFor(m => m.UserName, new { @name = "username", @type = "text", @id = "UserName", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.UserName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="yourPassword">Password</label>
                                                    @Html.TextBoxFor(m => m.UserPassword, new { @name = "password", @type = "password", @id = "UserPassword", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.UserPassword)
                                                </td>
                                            </tr>
                                    </table>
                                        <hr />
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">LogIn</button>
                                        </div>
                                        <div class="col-12" style="padding-top:3px;">
                                            <button class="btn btn-danger w-100" type="button" onclick="location.href='@Url.Action("RegisterPage","LogIn")'">Register</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="credits" style="margin-top:100px">
                                    Powered by <a href="#">Shriram Technology CRM</a> © 2022 UAT- v1.0
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div id="MyPopup" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">
                            <b><span id="lblError"></span></b>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" id="btnClosePopupId" onclick="btnclosepopup();" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (ViewBag.Message != "" && ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                $("#lblError").html('@Html.Raw(ViewBag.Message)');
                $("#MyPopup").modal("show");
                };

                function btnclosepopup() {
                    $("#MyPopup").modal("hide");
                    window.location.href = "/LogIn/LogIn";
                }
            </script>
        }

    </main><!-- End #main -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

